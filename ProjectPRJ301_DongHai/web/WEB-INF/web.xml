<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>controller.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MovieServlet</servlet-name>
        <servlet-class>controller.MovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Movie_Detail</servlet-name>
        <servlet-class>controller.Movie_Detail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassWordServlet</servlet-name>
        <servlet-class>controller.ChangePassWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeProfileServlet</servlet-name>
        <servlet-class>controller.ChangeProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TabServlet</servlet-name>
        <servlet-class>controller.TabServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckBoxSearchServlet</servlet-name>
        <servlet-class>controller.CheckBoxSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchByName</servlet-name>
        <servlet-class>controller.SearchByName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MovieServlet</servlet-name>
        <url-pattern>/movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Movie_Detail</servlet-name>
        <url-pattern>/movie_detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassWordServlet</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeProfileServlet</servlet-name>
        <url-pattern>/changeprofile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TabServlet</servlet-name>
        <url-pattern>/tab</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckBoxSearchServlet</servlet-name>
        <url-pattern>/checkbox</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchByName</servlet-name>
        <url-pattern>/searchbyname</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
